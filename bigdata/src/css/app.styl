@font-face {
  //微软雅黑
  font-family: 'ms';
  src: url('./msyh.ttf') format('truetype');
  font-weight:normal;
  font-style:normal;
}

@font-face {
  //微软雅黑粗体
  font-family: 'msbd';
  src: url('./msyhbd.ttf') format('truetype');
  font-weight:normal;
  font-style:normal;
}

.fh-page {
  height 100vh;
}

[v-cloak] {
  display: none;
}

.map-box {
  background: transparent;
  position: absolute;
  width: 100%;
  height 100%;
  // background-color: #101010;

}

.data-wrapper {
  position relative;
  width: 100%;
  height: 100%;
  flex-wrap: nowrap;
}

.data-box {
  padding: 0vh .5vh 0vh;
  position: absolute;
  width: 43vh;
  height 100%;
  top: 0;
}

#left-drawer {
  aside {
    background: transparent;
  }
}

.left-bg {
  background-color: rgba(0, 0, 0, .8);
}

.pop-box {
  box-sizing: border-box;
  padding: 0.6vh 1vh;
  background: $lin;
  text-align: center;
  border-radius: 0.5vh;

  .pop-name {
    color: #2ecdf3;
    font-family: ms;
    text-align: left;
    padding: 0 1vh;
    border-left: 2px solid currentColor;
    font-size: 1.4vh;
    line-height: 1.4vh;
  }

  .pop-item-name {
    font-family: ms;
    font-size: .8vh;
    border-radius: 1vh;
    line-height: 2.4vh;
    background-image: linear-gradient(to bottom, rgba(10, 0, 0, 0.3) 0%, rgba(0, 5, 0, 0.2) 50%, rgba(10, 0, 0, 0.3) 100%);
    color: #05c8db;
  }

  .pop-sub {
    display: inline-block;
    font-size: 1vh;
  }



  .pop-item-data {
    font-size: 2.4vh;
    font-weight: 500;
    height: 68%;
    line-height: 1;
    align-items: center;

    .c1 {
      color: rgb(255,204,3);
    }

    .c2 {
      color: rgb(8,229,64);
    }
  }



 

  .chart-box {
    width: 100%;
    height: 95%;
  }
}
.text-tt{
    color rgb(121,255,255)
    }
 .comfort {
    height: 76%;
  }

.guide-complain-box {
  height: 37%;
  box-sizing: border-box;
}

.amap-ui-smp-ifwn-def-tr-close {
  color: rgb(121, 255, 255) !important;
  margin: 10px 10px 0 0 !important;
}

.amap-ui-infowindow-title {
  border-bottom: 1px solid rgb(121, 255, 255) !important;
}

.amap-ui-smp-ifwn-content-body {
  padding: 0.5rem !important;
  background: linear-gradient(to bottom, rgba(10, 159, 226, 0.85) 0%, rgba(6, 40, 119, 0.45) 10%, rgba(21, 96, 163, 0.85) 60%, rgba(31, 203, 245, 0.85) 100%) !important;
  border: 1px solid rgb(20, 178, 218) !important;
  box-shadow: 0px 0px 10px rgb(0, 93, 201) !important;
}
.amap-ui-control-zoom{
  opacity .6}

.data-page{
  padding-top: 100px;
  width: 100%;
  height 100%;
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
  flex-wrap: wrap;
}
.tool{
  height auto;
  padding: .5rem;
  }
.chart-area{
  flex: 1;
  .pop-box{
    height 100%;}
  }  
