  background-color $primary 
  color $font-color
  padding 0 .05rem 0 60px

.lr-sm-pd
 padding 0 .05rem
.section-bg{
  background-color $section-bg
  border 1px solid #33566d 
  }
.section-padding
  padding .5vh

