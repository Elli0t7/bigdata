@import '~variables'

html
 font-size 625%
 -webkit-text-size-adjust:none;
body 
 font-size 10%

@media only screen and (max-width:1200px){
 html{
  font-size 500%
 }
.page{
   padding: 0 !important
   }
}
body 
 height 100%
@font-face
  font-family: DinBold;
  src:url('../statics/font/DIN Regular.otf')
   
@font-face
  font-family: LTDH;
  src:url('../statics/font/FZLTDHJW_GBK.ttf')

border-red-linear(){
  border-image linear-gradient(-45deg,#e87568,#f7335e);
   
}
border-blue-linear(){
  border-image linear-gradient(-45deg,#457dfe,#29d5fd);
}
border-purple-linear(){
  border-image linear-gradient(-45deg,#8b34fd,#4842fb);
}
.bg-rl--45{ 
  background-image $bg-rl-45  
  background-size 100%  
}
.bg-rl-0{
  background-image $bg-rl0  
  background-size: 100%
}
.bg-bl--45{   
  background-image $bg-bl-45   
  background-size: 100%
}
.bg-bl-0{
  background-image $bg-bl0
  background-size: 100%
}
.bg-pl--45{
  background-image $bg-pl-45
  background-size: 100%
}
.bg-pl-0{
  background-image $bg-pl0
  background-size: 100%
}

.text-rl
  color $rl !important

.text-bl
  color $bl
  
.text-pl
  color $pl
