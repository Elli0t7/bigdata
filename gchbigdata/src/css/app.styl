.sel-box
  border 1px solid white
  padding .04rem
.first-row
  height 46vh
.second-row
  height 33.5vh

.left-head  
  padding .2rem 0  
  .q-tabs-head
   font-size .18rem
   background-color transparent !important 
   bold()
   .active 
    .q-tab-label
        blue-linear()
      // .q-tabs-bar
     
  .search-box
    border 1px solid rgba(255,255,255,.5)   
    padding .08rem .05rem

@keyframes pulse
  0%
    opacity 0 
  100%
    opacity 1
    transform scale(1.4)
  
.marker_shark
 animation-name: pulse;
 animation-duration: .4s;
 animation-timing-function: linear; 
 animation-iteration-count: infinite;
 animation-direction: alternate;
 animation-play-state: running; 

.overview-box 
 //border-radius .06rem
 //height 10vh
 padding 1.8vh
 font-size .1rem
.overview-header
  medium()
  font-size 1.8vh
  color #18ffff
  padding-left .8vh
